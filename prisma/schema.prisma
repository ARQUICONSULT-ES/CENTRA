generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Tabla principal: Tenants
model Tenant {
  id           String        @id @db.Uuid
  customerName String        @db.VarChar(50)
  createdAt    DateTime
  modifiedAt   DateTime
  environments Environment[]
  connections  Connection[]

  @@map("tenants")
}

// Tabla relacionada: Environments
model Environment {
  tenantId   String      @db.Uuid
  name       String      @db.VarChar(50)
  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  extensions Extension[]

  @@id([tenantId, name])
  @@map("environments")
}

// Tabla relacionada: Extensions
model Extension {
  tenantId        String      @db.Uuid
  environmentName String      @db.VarChar(50)
  id              String      @db.Uuid
  name            String      @db.VarChar(50)
  version         String      @db.VarChar(50)
  publisher       String      @db.VarChar(50)
  publishedAs     String      @db.VarChar(20)
  environment     Environment @relation(fields: [tenantId, environmentName], references: [tenantId, name], onDelete: Cascade)

  @@id([tenantId, environmentName, id])
  @@map("extensions")
}

// Tabla relacionada: Connections
model Connection {
  tenantId        String   @db.Uuid
  id              String   @db.Uuid
  grantType       String   @db.VarChar(100)
  clientId        String   @db.Uuid
  clientSecret    String   @db.VarChar(1000)
  scope           String   @db.VarChar(100)
  token           String   @db.VarChar(1000)
  tokenExpiresAt  DateTime
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@id([tenantId, id])
  @@map("connections")
}
